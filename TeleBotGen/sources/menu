#!/bin/bash

menu_src () {
bot_retorno="=========COMANDOS=========\n"
	 if [[ $(echo $permited|grep "${chatuser}") = "" ]]; then
		 if [[ $(cat ${CID}|grep "${chatuser}") = "" ]]; then
		         bot_retorno="$LINE\n"
			 bot_retorno+=" Ô∏è ADM-ADMIN BOT \n  üö´ No tiene acceso al generador üö´"
			 bot_retorno+="$LINE\n"
			 bot_retorno+="/ID | (muestra sus ID)\n"
			 bot_retorno+="/menu | (muestra este menu)\n"
			 bot_retorno+="/ayuda | (ayuda de los comandos)\n"
			 bot_retorno+="$LINE\n"
			 msj_fun
		 else
		 bot_retorno+="$LINE\n"
			 bot_retorno+="  SE HA LIBERADO TU ACCESOÔ∏è "
			 bot_retorno+="$LINE\n"
			 bot_retorno+="/ID | (muestra sus ID)\n"
			 bot_retorno+="/instal | (link de instalacion)\n"
			 bot_retorno+="/menu | (muestra este menu)\n"
			 bot_retorno+="/ayuda | (Ayuda de los comandos)\n"
			 bot_retorno+="/keygen  | Presiona √©l bot√≥n para generar la key |\n"
			 bot_retorno+="$LINE\n"
			 menu_print
		 fi
		 
	 else
		 unset PID_GEN
		 PID_GEN=$(ps x|grep -v grep|grep "http-server.sh")
		 [[ ! $PID_GEN ]] && PID_GEN='(Offline) ‚ùå' || PID_GEN='(Online)'

		 unset usadas
		 usadas="$(cat /etc/http-instas)"
		 [[ ! $usadas ]] && k_used="0" || k_used="$usadas"
		 
		 bot_retorno+="BOT-GEN $PID_GEN | Keys Used [$k_used]\n"
		 bot_retorno+="$LINE\n"
		 bot_retorno+="/infosys | (info del sistema)\n"
		 bot_retorno+="/list | (lista de ID permitidas)\n"
		 bot_retorno+="/instal | (link de instalacion)\n"
		 bot_retorno+="/menu | (muestra este menu)\n"
		 bot_retorno+="/ayuda | (ayuda con los comandos)\n"
		 bot_retorno+="/cache | (Limpiar cache Ram)\n"
		 bot_retorno+="/update | (actualizar el BotGen)\n"
		 bot_retorno+="/reboot | (Reinicia el servidor vps)\n"
		 bot_retorno+="$LINE\n"
		 menu_print
	 fi	
}
